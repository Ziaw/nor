<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <appender name="NRailsAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %l - %m %n"/>
      </layout>
    </appender>
    <!--
    <appender name="NRailsFileAppender" type="log4net.Appender.FileAppender">
      <file value="NRails.log"/>
      <appendToFile value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d  %-5p: [%c] - %m %n"/>
      </layout>
    </appender>
-->
    <root>
      <level value="ALL"/>
    </root>

    <logger name="NRails">
      <level value="ALL"/>
      <appender-ref ref="NRailsAppender"/>
    </logger>

  </log4net>
</configuration>
